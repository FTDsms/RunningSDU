<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="toolbarNavigationButtonStyle">@style/toolbar_navigation_icon</item>
        <!--<item name="android:actionOverflowMenuStyle">@style/toolbar_action_menu_overflow</item>-->
    </style>

    <!--navigation icon-->
    <style name="toolbar_navigation_icon" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:width">?attr/actionBarSize</item>
        <item name="android:height">?attr/actionBarSize</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="toolbar_action_menu_overflow" parent="Widget.AppCompat.PopupMenu.Overflow">
        <!--是否覆盖锚点-->
        <item name="overlapAnchor">false</item>
        <!--弹出层水平方向上的偏移，负值为距离右边的空隙-->
        <item name="android:dropDownHorizontalOffset">-10dp</item>
        <item name="android:popupBackground">@color/colorPrimary</item>
    </style>

</resources>
